<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="?actionBarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="?actionBarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextAppearance="@style/TextSecure.SubtitleTextStyle"
        app:titleTextAppearance="@style/TextSecure.TitleTextStyle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="false"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingStart="28dp"
            android:paddingTop="14dp"
            android:paddingEnd="28dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:paddingStart="10dp"
                android:text="@string/InviteActivity_friends_dont_let_friends_text_unencrypted"
                android:textAppearance="@style/TextAppearance.Signal.Title2.Bold"
                android:textColor="@color/signal_text_primary" />

            <EditText
                android:id="@+id/invite_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/invite_edit_text_background"
                android:gravity="top"
                android:inputType="textShortMessage|textMultiLine"
                android:minHeight="@dimen/invite_edit_text_min_height"
                android:minLines="2"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/signal_text_primary"
                tools:text="Let's switch to Signal: https://sgnl.link/asdfdfsa" />

            <FrameLayout
                android:id="@+id/sms_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                   android:id="@+id/tvInvite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/reg_bg_next_selector"
                    android:gravity="center"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:text="@string/InviteActivity_share_with_contacts"
                    android:textColor="@color/reg_bg_next_text_color_selector"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/registerButton"
                    app:layout_constraintEnd_toEndOf="@+id/registerButton"
                    app:layout_constraintTop_toTopOf="@+id/registerButton"
                    app:srcCompat="@drawable/ic_green_circle_arrow" />
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/share_button"
                style="@style/Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:drawablePadding="4dp"
                android:text="@string/InviteActivity_choose_how_to_share"
                app:drawableStartCompat="@drawable/ic_share_24" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/sms_send_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?android:windowBackground"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <org.thoughtcrime.securesms.components.ContactFilterToolbar
            android:id="@+id/contact_filter"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/core_ultramarine"
            android:elevation="4dp"
            android:minHeight="?attr/actionBarSize"
            app:searchTextStyle="@style/TextSecure.TitleTextStyle.Light" />

        <fragment
            android:id="@+id/contact_selection_list_fragment"
            android:name="org.thoughtcrime.securesms.ContactSelectionListFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:layout="@layout/contact_selection_list_fragment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/cancel_sms_button"
                style="@style/Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/InviteActivity_cancel" />

            <Button
                android:id="@+id/send_sms_button"
                style="@style/Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                tools:text="Send to 0 friends" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
