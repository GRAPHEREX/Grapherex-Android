<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCentralCircle"
        app:layout_constraintStart_toEndOf="@+id/ivCentralCircle"
        app:srcCompat="@drawable/ic_rationale_dialog_small_black_circle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintEnd_toStartOf="@+id/ivCentralCircle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rationale_dialog_big_black_circle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCentralCircle"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginTop="62dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rationale_dialog_big_green_circle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="62dp"
        app:layout_constraintBottom_toTopOf="@+id/appCompatImageView2"
        app:layout_constraintEnd_toEndOf="@+id/appCompatImageView2"
        app:srcCompat="@drawable/ic_rationale_dialog_small_green_circle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivHeaderIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ivCentralCircle"
        app:layout_constraintEnd_toEndOf="@+id/ivCentralCircle"
        app:layout_constraintStart_toStartOf="@+id/ivCentralCircle"
        app:layout_constraintTop_toTopOf="@+id/ivCentralCircle"
        app:srcCompat="@drawable/ic_calling_black" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/ivCentralCircle"
        app:layout_constraintEnd_toEndOf="@+id/ivCentralCircle"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="@+id/ivCentralCircle"
        app:layout_constraintTop_toTopOf="@+id/ivCentralCircle"
        app:layout_constraintVertical_bias="0.95"
        app:srcCompat="@drawable/ic_edit_profile_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>